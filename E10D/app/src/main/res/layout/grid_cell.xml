<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relImageContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imgProductImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/empty_placeholder"
            android:scaleType="centerCrop"/>

    </RelativeLayout>
    <TextView
        android:id="@+id/txtDiscountRate"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:background="@color/product_text_bg"
        android:layout_above="@+id/linBottomContainer"
        android:layout_marginBottom="1dp"
        android:gravity="center"
        android:text=""
        android:textColor="@android:color/black"/>
    <LinearLayout
        android:id="@+id/linBottomContainer"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/relImageContainer"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtView"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_marginRight="1dp"
            android:background="@color/product_text_bg"
            android:gravity="center"
            android:text="@string/view"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/txtAdd"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@color/product_text_bg"
            android:gravity="center"
            android:text="@string/add"
            android:textColor="@android:color/black"/>
    </LinearLayout>

</RelativeLayout>