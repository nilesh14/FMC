<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="250dp"
    android:layout_height="match_parent"
    android:layout_gravity="right"
    android:id="@+id/drawerRight"
    android:clickable="true"
    android:background="@color/side_bg_color">

    <View
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="@color/header_red"></View>

    <RelativeLayout
        android:id="@+id/relUserContainer"
        android:layout_width="fill_parent"
        android:layout_height="60dp"

        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <ImageView
            android:id="@+id/imgUserIcon"
            android:layout_width="@dimen/side_image_width"
            android:layout_height="@dimen/side_image_height"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/user"/>

        <ImageView
            android:id="@+id/imgUserRightArrowIcon"
            android:layout_width="@dimen/side_arrow_width"
            android:layout_height="@dimen/side_arrow_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow"/>

        <TextView
            android:id="@+id/txtUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imgUserIcon"
            android:layout_toLeftOf="@+id/imgUserRightArrowIcon"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:text="Hi, User"
            android:textColor="@android:color/white"
            android:textSize="@dimen/side_text_size"/>

    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@color/side_seperator_color"></View>


    <RelativeLayout
        android:id="@+id/relHomeContainer"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@color/header_red"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <ImageView
            android:id="@+id/imgHome"
            android:layout_width="@dimen/side_image_width"
            android:layout_height="@dimen/side_image_height"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/order_history"/>

        <ImageView
            android:id="@+id/imgHomeRightArrowIcon"
            android:layout_width="@dimen/side_arrow_width"
            android:layout_height="@dimen/side_arrow_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow"/>

        <TextView
            android:id="@+id/txtHomeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imgHome"
            android:layout_toLeftOf="@+id/imgHomeRightArrowIcon"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:text="Home"
            android:textColor="@android:color/white"
            android:textSize="@dimen/side_text_size"/>

    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@color/side_seperator_color"></View>


    <RelativeLayout
        android:id="@+id/relSearchContainer"
        android:layout_width="fill_parent"
        android:layout_height="60dp"

        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <ImageView
            android:id="@+id/imgSearchIcon"
            android:layout_width="@dimen/side_image_width"
            android:layout_height="@dimen/side_image_height"
            android:scaleType="fitXY"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/search"/>

        <ImageView
            android:id="@+id/imgSearchRightArrowIcon"
            android:layout_width="@dimen/side_arrow_width"
            android:layout_height="@dimen/side_arrow_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow"/>

        <TextView
            android:id="@+id/txtSearchName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imgSearchIcon"
            android:layout_toLeftOf="@+id/imgSearchRightArrowIcon"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:text="Search for a Product"
            android:textColor="@android:color/white"
            android:textSize="@dimen/side_text_size"/>

    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@color/side_seperator_color"></View>


    <RelativeLayout
        android:id="@+id/relShoppingContainer"
        android:layout_width="fill_parent"
        android:layout_height="60dp"

        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <ImageView
            android:id="@+id/imgShoppingIcon"
            android:layout_width="@dimen/side_image_width"
            android:layout_height="@dimen/side_image_height"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/side_cart"/>

        <ImageView
            android:id="@+id/imgShoppingRightArrowIcon"
            android:layout_width="@dimen/side_arrow_width"
            android:layout_height="@dimen/side_arrow_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow"/>

        <TextView
            android:id="@+id/txtShoppingName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imgShoppingIcon"
            android:layout_toLeftOf="@+id/imgShoppingRightArrowIcon"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:text="Shopping Cart (0)"
            android:textColor="@android:color/white"
            android:textSize="@dimen/side_text_size"/>

    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@color/side_seperator_color"></View>


    <RelativeLayout
        android:id="@+id/relInviteContainer"
        android:layout_width="fill_parent"
        android:layout_height="60dp"

        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <ImageView
            android:id="@+id/imgInviteIcon"
            android:layout_width="@dimen/side_image_width"
            android:layout_height="@dimen/side_image_height"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/invite_users"/>

        <ImageView
            android:id="@+id/imgInviteRightArrowIcon"
            android:layout_width="@dimen/side_arrow_width"
            android:layout_height="@dimen/side_arrow_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow"/>

        <TextView
            android:id="@+id/txtInviteName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imgInviteIcon"
            android:layout_toLeftOf="@+id/imgInviteRightArrowIcon"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:text="Invite Friedns"
            android:textColor="@android:color/white"
            android:textSize="@dimen/side_text_size"/>

    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@color/side_seperator_color"></View>



    <RelativeLayout
        android:id="@+id/relOrderContainer"
        android:layout_width="fill_parent"
        android:layout_height="60dp"

        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <ImageView
            android:id="@+id/imgOrderIcon"
            android:layout_width="@dimen/side_image_width"
            android:layout_height="@dimen/side_image_height"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/order_history"/>

        <ImageView
            android:id="@+id/imgOrderRightArrowIcon"
            android:layout_width="@dimen/side_arrow_width"
            android:layout_height="@dimen/side_arrow_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow"/>

        <TextView
            android:id="@+id/txtOrderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imgOrderIcon"
            android:layout_toLeftOf="@+id/imgOrderRightArrowIcon"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:text="Order History"
            android:textColor="@android:color/white"
            android:textSize="@dimen/side_text_size"/>

    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@color/side_seperator_color"></View>



    <RelativeLayout
        android:id="@+id/relSettingContainer"
        android:layout_width="fill_parent"
        android:layout_height="60dp"

        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <ImageView
            android:id="@+id/imgSettingIcon"
            android:layout_width="@dimen/side_image_width"
            android:layout_height="@dimen/side_image_height"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/settings"/>

        <ImageView
            android:id="@+id/imgSettingRightArrowIcon"
            android:layout_width="@dimen/side_arrow_width"
            android:layout_height="@dimen/side_arrow_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow"/>

        <TextView
            android:id="@+id/txtSettingName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imgSettingIcon"
            android:layout_toLeftOf="@+id/imgSettingRightArrowIcon"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:text="Settings"
            android:textColor="@android:color/white"
            android:textSize="@dimen/side_text_size"/>

    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@color/side_seperator_color"></View>



</LinearLayout>