<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">
    <RelativeLayout
        android:id="@+id/relHeader"
        android:layout_width="fill_parent"
        android:layout_height="40dp">

        <Button
            android:id="@+id/btnCommentCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@null"
            android:visibility="gone"
            android:drawableLeft="@drawable/comment_blue"
            android:text="20" />

        <TextView
            android:id="@+id/txtDone"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:padding="5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:text="DONE"
            android:textSize="@dimen/text_14sp"
            android:textColor="@color/hashtag_dialog_done_button"/>
        <TextView
            android:id="@+id/txtHeaderText"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_toLeftOf="@+id/txtDone"
            android:layout_toRightOf="@+id/imgCloseSearchBar"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Select Tags"
            android:textSize="16sp"
            android:textColor="@color/main_color_red"/>

        <ImageView
            android:id="@+id/imgCloseSearchBar"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/close_pink"/>
    </RelativeLayout>
    <View
        android:id="@+id/viewSeparator"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#F2F2F2" />

    <ListView
        android:id="@+id/listHashTags"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:dividerHeight="1dp"
        android:divider="@android:color/black"
        android:layout_margin="5dp"
        android:cacheColorHint="#00000000"></ListView>

</LinearLayout>